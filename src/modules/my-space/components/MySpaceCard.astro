---
import Card from "@/components/ui/card/Card.astro";
import CardBody from "@/components/ui/card/CardBody.astro";
import CardHeader from "@/components/ui/card/CardHeader.astro";
import { Typography } from "@/components/ui/typography";

type Props = {
  title: string;
  resourceCount?: number;
};

const { title, resourceCount } = Astro.props;
---

<Card
  className="justify-end flex-1 md:gap-6 bg-linear-to-br from-box-foreground/10 from-5% to-box border-border"
>
  <CardHeader
    className="[&_svg]:size-6 md:[&_svg]:size-8 lg:[&_svg]:size-10 [&_svg]:transition-[width,height]"
  >
    <slot />
  </CardHeader>
  <CardBody className="gap-y-0">
    <Typography
      as="h5"
      className="truncate text-base lg:text-lg transition-[font-size]"
    >
      {title}
    </Typography>
    <Typography
      as="small"
      className="text-xs lg:text-sm transition-[font-size]"
      muted
    >
      {resourceCount || "sin"} recursos
    </Typography>
  </CardBody>
</Card>

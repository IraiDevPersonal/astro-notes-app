---
import Card from "@/components/ui/card/Card.astro";
import CardBody from "@/components/ui/card/CardBody.astro";
import CardHeader from "@/components/ui/card/CardHeader.astro";
import { Typography } from "@/components/ui/typography";
import { StickyNote } from "lucide-react";
import { NoteCardDropdown } from "./note-card-dropdown";
import CardAction from "@/components/ui/card/CardAction.astro";

type Props = {
  title: string;
  id: string;
};

const { title, id } = Astro.props;
---

<Card className="gap-2 justify-center items-center aspect-square relative">
  <CardHeader>
    <StickyNote
      className="size-10 text-muted-foreground transition-[width,height]"
    />
  </CardHeader>
  <CardBody>
    <Typography
      as="h6"
      className="text-sm transition-[font-size] text-center capitalize"
    >
      {title}
    </Typography>
  </CardBody>
  <CardAction className="absolute top-3 right-3">
    <NoteCardDropdown client:visible id={id} />
  </CardAction>
</Card>

---
import Card from "@/components/ui/card/Card.astro";
import CardBody from "@/components/ui/card/CardBody.astro";
import CardHeader from "@/components/ui/card/CardHeader.astro";
import Typography from "@/components/ui/Typography.astro";
import { Folder } from "lucide-react";
---

<Card className="gap-2 justify-center items-center">
  <CardHeader>
    <Folder
      className="size-6 md:size-8 lg:size-10 text-muted-foreground fill-muted-foreground transition-[width,height]"
    />
  </CardHeader>
  <CardBody>
    <Typography
      tag="h6"
      className="text-xs md:text-sm transition-[font-size] text-center"
    >
      Folder Name
    </Typography>
  </CardBody>
</Card>

---
import { cn } from "@/lib/utils";
import type { Polymorphic, HTMLTag } from "astro/types";

type Props<T extends HTMLTag = HTMLTag> = {
  tag?: T;
  className?: string;
} & Omit<Polymorphic<{ as: T }>, "class">;

const { className, tag: Component = "div" } = Astro.props;
---

<Component
  class={cn("overflow-y-auto", className)}
  style={{ scrollbarWidth: "none" }}
>
  <slot />
</Component>

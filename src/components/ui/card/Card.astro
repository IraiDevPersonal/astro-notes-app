---
import { cn } from "@/lib/utils";
import type { Polymorphic } from "astro/types";

type Props = {
  className?: string;
} & Omit<Polymorphic<{ as: "article" }>, "class">;

const { className } = Astro.props;
---

<article
  class={cn(
    "p-5 md:p-6 rounded-2xl md:rounded-3xl border-2 border-border/60 hover:border-foreground/20 shadow-xl shadow-transparent hover:shadow-foreground/5 transition-[border,box-shadow,padding,height,width] flex flex-col w-full gap-4 bg-box",
    className
  )}
>
  <slot />
</article>

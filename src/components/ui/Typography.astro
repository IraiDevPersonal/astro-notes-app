---
import { cn } from "@/lib/utils";
import type { Polymorphic } from "astro/types";

type Tag = "h1" | "h2" | "h3" | "h4" | "h5" | "p" | "small";

type Props<T extends Tag = Tag> = {
  muted?: boolean;
  tag?: T;
} & Polymorphic<{ as: T }>;

const { muted, tag: Component = "p", class: className, ...props } = Astro.props;

const classNames: Record<Tag, string> = {
  h1: "text-4xl font-bold leading-tight tracking-tighter",
  h2: "text-3xl font-bold leading-tight tracking-tighter",
  h3: "text-2xl font-medium leading-tight tracking-tighter",
  h4: "text-xl font-medium leading-tight tracking-tighter",
  h5: "text-lg font-medium leading-tight tracking-tighter",
  p: "text-base font-normal leading-relaxed tracking-tight",
  small: "text-sm font-normal leading-relaxed tracking-tight",
};
---

<Component
  class={cn(classNames[Component], muted && "text-muted-foreground", className)}
  {...props}
>
  <slot />
</Component>
